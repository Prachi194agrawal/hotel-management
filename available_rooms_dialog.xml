<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputRoomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Room Number"
        android:layout_margin="16dp"
        android:inputType="number" />

    <Button
        android:id="@+id/showRoomsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Rooms"
        android:layout_below="@id/inputRoomNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/displayRoomsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Available Rooms"
        android:textSize="20sp"
        android:layout_below="@id/showRoomsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>
